<Page
    x:Class="Wardrobe_Assistant.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE6EDF6" Offset="0"/>
                <GradientStop Color="#FF1781CB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="70,351,0,0" TextWrapping="Wrap" Text="Wardrobe Assistant" VerticalAlignment="Top" SelectionChanged="textBlock_SelectionChanged" FontWeight="Bold" FontSize="24" FontFamily="Rockwell"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="85,167,0,0" VerticalAlignment="Top" Width="164" Source="Assets/Start1.jpg" RenderTransformOrigin="0.408,0.5"/>
        <ProgressRing x:Name="progress1" HorizontalAlignment="Left" Margin="120,207,0,0" VerticalAlignment="Top" Height="60" Width="48"/>
        <Button x:Name="button" Content="Enter" HorizontalAlignment="Left" Margin="154,451,0,0" VerticalAlignment="Top" Click="button_Click"/>

    </Grid>
</Page>
