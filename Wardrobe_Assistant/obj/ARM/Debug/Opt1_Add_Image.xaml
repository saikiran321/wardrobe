<Page
    x:Class="Wardrobe_Assistant.Opt1_Add_Image"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Flyout x:Key="OptionList">
            <StackPanel>
                <ListView x:ConnectionId='1' x:Name="listView1" VerticalAlignment="Top" >
                    <Button x:ConnectionId='2' Content="Explore"                      />
                    <Button x:ConnectionId='3' x:Name="AddDress" Content="Add Dress" HorizontalAlignment="Center"                        />

                    <Button x:ConnectionId='4' Content="Mix &amp; Match" HorizontalAlignment="Center"                        />
                    <Button x:ConnectionId='5' Content="My Collections" HorizontalAlignment="Center"                             />
                </ListView>
            </StackPanel>
        </Flyout>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Menu" Flyout="{StaticResource OptionList}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667" />

        <Button x:ConnectionId='6' x:Name="button" Content="Camera" HorizontalAlignment="Left" Margin="109,176,0,0" VerticalAlignment="Top"                     />
        <Image x:ConnectionId='7' x:Name="imageControl" HorizontalAlignment="Left" Height="100" Margin="163,290,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:ConnectionId='8' x:Name="comboBox" HorizontalAlignment="Left" Margin="143,90,0,0" VerticalAlignment="Top" Width="120"                                             >
            <Button x:ConnectionId='15' Content="Top"                  />
            <Button x:ConnectionId='16' Content="Bottom"                      />
        </ComboBox>
        <TextBlock x:ConnectionId='9' x:Name="textBlock" HorizontalAlignment="Left" Margin="143,65,0,0" TextWrapping="Wrap" Text="Select category:" VerticalAlignment="Top"                                              />
        <Image x:ConnectionId='10' x:Name="image" HorizontalAlignment="Left" Height="232" Margin="55,237,0,0" VerticalAlignment="Top" Width="267"/>
        <Button x:ConnectionId='11' x:Name="button1" Content="Save" HorizontalAlignment="Left" Margin="163,474,0,0" VerticalAlignment="Top"                      />
        <TextBlock x:ConnectionId='12' x:Name="preview" HorizontalAlignment="Left" Margin="10,212,0,0" TextWrapping="Wrap" Text="Preview:" VerticalAlignment="Top" Visibility="Visible"/>
        <Button x:ConnectionId='13' x:Name="gallery" Content="Gallery" HorizontalAlignment="Left" Margin="214,176,0,0" VerticalAlignment="Top"                      />
        <TextBlock x:ConnectionId='14' x:Name="Saved" HorizontalAlignment="Left" Margin="158,345,0,0" TextWrapping="Wrap" Text="Saved!" VerticalAlignment="Top" Visibility="Collapsed"/>

    </Grid>
</Page>

