<Page
    x:Class="Wardrobe_Assistant.Main_Interface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Flyout x:Key="OptionList">
            <StackPanel>
                <ListView x:ConnectionId='1' x:Name="listView1" VerticalAlignment="Top" >
                    <Button x:ConnectionId='2' Content="Explore"                      />
                    <Button x:ConnectionId='3' x:Name="AddDress" Content="Add Dress" HorizontalAlignment="Center"                        />

                    <Button x:ConnectionId='4' Content="Mix &amp; Match" HorizontalAlignment="Center"                        />
                    <Button x:ConnectionId='5' Content="My Collections" HorizontalAlignment="Center"                             />
                </ListView>
            </StackPanel>
        </Flyout>
    </Page.Resources>
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Menu" Flyout="{StaticResource OptionList}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667" />

        <Image x:ConnectionId='6' x:Name="RandomCollectiontop" HorizontalAlignment="Left" Height="113" Margin="106,202,0,0" VerticalAlignment="Top" Width="148"/>
        <Button x:ConnectionId='7' x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="260,150,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='8' x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="264,524,0,0" VerticalAlignment="Top"                     />
        <Image x:ConnectionId='9' x:Name="RandomCollectionbottom" HorizontalAlignment="Left" Height="112" Margin="106,365,0,0" VerticalAlignment="Top" Width="148"/>
        <TextBlock x:ConnectionId='10' x:Name="textBlock" HorizontalAlignment="Left" Margin="184,10,0,0" TextWrapping="Wrap" Text="Explore" VerticalAlignment="Top" />
    </Grid>


</Page>

