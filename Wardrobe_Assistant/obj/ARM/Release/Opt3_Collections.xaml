<Page
    x:Class="Wardrobe_Assistant.Opt3_Collections"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Flyout x:Key="OptionList">
            <StackPanel>
                <ListView x:ConnectionId='1' x:Name="listView1" VerticalAlignment="Top" >
                    <Button x:ConnectionId='2' Content="Explore"                      />
                    <Button x:ConnectionId='3' x:Name="AddDress" Content="Add Dress" HorizontalAlignment="Center"                        />

                    <Button x:ConnectionId='4' Content="Mix &amp; Match" HorizontalAlignment="Center"                        />
                    <Button x:ConnectionId='5' Content="My Collections" HorizontalAlignment="Center"                             />
                </ListView>
            </StackPanel>
        </Flyout>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Menu" Flyout="{StaticResource OptionList}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667" />

        <TextBlock x:ConnectionId='6' x:Name="textBlock" HorizontalAlignment="Left" Margin="131,116,0,0" TextWrapping="Wrap" Text="My Collections" VerticalAlignment="Top"/>
        
        <FlipView x:ConnectionId='7' x:Name="flipViewtop" HorizontalAlignment="Left" Margin="70,90,0,0" VerticalAlignment="Top" Width="209" Height="219"                                                 >
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" />
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <FlipView x:ConnectionId='8' x:Name="flipViewbottom" HorizontalAlignment="Left" Margin="70,400,0,0" VerticalAlignment="Top" Width="209" Height="192">
        <FlipView.ItemTemplate>
            <DataTemplate>
                <Image Source="{Binding}" />
            </DataTemplate>
        </FlipView.ItemTemplate>
        </FlipView>
    </Grid>
</Page>

