<Page
    x:Class="Wardrobe_Assistant.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" Margin="120,135,0,0" TextWrapping="Wrap" Text="Wardrobe Assistant" VerticalAlignment="Top"                                              />
        <Image x:ConnectionId='2' x:Name="image" HorizontalAlignment="Left" Height="100" Margin="92,30,0,0" VerticalAlignment="Top" Width="191" Source="Assets/Start1.jpg" RenderTransformOrigin="0.408,0.5"/>
        <ProgressRing x:ConnectionId='3' x:Name="progress1" HorizontalAlignment="Left" Margin="120,207,0,0" VerticalAlignment="Top" Height="60" Width="48"/>
        <Button x:ConnectionId='4' x:Name="button" Content="Enter" HorizontalAlignment="Left" Margin="162,331,0,0" VerticalAlignment="Top"                     />

    </Grid>
</Page>

