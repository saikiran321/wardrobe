<Page
    x:Class="Wardrobe_Assistant.Opt3_Collections"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wardrobe_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" Margin="131,116,0,0" TextWrapping="Wrap" Text="My Collections" VerticalAlignment="Top"/>
        <ComboBox x:ConnectionId='2' x:Name="comboBox" HorizontalAlignment="Left" Margin="228,145,0,0" VerticalAlignment="Top" Width="120" />
        <Button x:ConnectionId='3' x:Name="button" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"                     />
        
        <FlipView x:ConnectionId='4' x:Name="flipViewtop" HorizontalAlignment="Left" Margin="70,90,0,0" VerticalAlignment="Top" Width="209" Height="219"                                                 >
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" />
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <FlipView x:ConnectionId='5' x:Name="flipViewbottom" HorizontalAlignment="Left" Margin="70,400,0,0" VerticalAlignment="Top" Width="209" Height="192">
        <FlipView.ItemTemplate>
            <DataTemplate>
                <Image Source="{Binding}" />
            </DataTemplate>
        </FlipView.ItemTemplate>
        </FlipView>
    </Grid>
</Page>

